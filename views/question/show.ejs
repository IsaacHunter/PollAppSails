<div class="container wrap">
  <div class="row">
    <div class="home-header col-xs-12">
      <h1 class="text-center">Results!</h1>
			<h4 class="text-center"><%- question.title %></h4>     
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
			<div id="container-results">
			</div>
    </div>
  </div>
</div>

<script text="text/javascript">
	$(function () {
		<% var answerTitlesStr = '['; %>
		<% var resultsStr = '['; %>
		<% answers.forEach(function (answer, index) { %>
			<% answerTitlesStr += "'" + answer.title + "'"; %>
			<% resultsStr += answer.result; %>
			<% if (index < answers.length - 1) { %>
				<% answerTitlesStr += ', '; %>
				<% resultsStr += ', '; %>
			<% } %>
		<% }); %>
		<%- 'var answerTitles = ' + answerTitlesStr + '];' %>
		<%- 'var results = ' + resultsStr + '];' %>
	    $('#container-results').highcharts({
	        chart: {
	          type: 'column'
	        },
					title: {
						text: ''
					},
	        xAxis: {
						categories: answerTitles
	        },
	        yAxis: {
	          title: {
	            text: 'Number of votes'
	          }
	        },
	        series: [{
						name: 'Votes',
	          data: results
	        }]
	    });
	});
</script>