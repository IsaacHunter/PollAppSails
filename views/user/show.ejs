<div class="container wrap">
  <div class="row">
    <div class="home-header col-xs-12">
      <h1 class="text-center">Welcome!</h1>
			<h4 class="text-center"><%- user.email %></h4>     
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h3 class="">Your questions</h3>
			<a href="/question/new">Create new question</a>
			<ul class="list-group questions">
				<% questions.forEach(function (question, index) { %>
					<li class="list-group-item">
						<p class="question-item">
							<%- index + 1 %>: <%- question.title %> <a href="/question/<%- question.id %>" class="results-link">See results</a>
						</p>
					</li>
				<% }) %>
			</ul>
    </div>
  </div>
</div>